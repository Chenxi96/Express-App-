extends layout 

block mainContent 
    h1 Blogs 
    a(href="/admin/blogs/create") 
        p  Create Blog 
    each blog in blogs
        div 
            h2 #{blog.title}
            p #{blog.body}
            p #{blog.createdAt}
            form(action="blogs/delete")
                input(type="hidden" name="_id" value=`${blog._id}`)
                input(type="submit" value="Delete")
            form(action="blogs/update" method="post") 
                input(type="hidden" name="_id" value=`${blog._id}`)
                input(type="submit" value="Update")